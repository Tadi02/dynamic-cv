<% activities.forEach(function(activity){ %>
    <tr id="<%= activity.id %>">
        <td class="activityName"><%= activity.name %></td>
        <td class="activityType"><%= activity.type %></td>
        <td class="activityTime"><%= activity.time %></td>
        <td class="activityDescription" style="max-width: 300px;"><%= activity.description %></td>
        <td class="centered"><a data-toggle="modal" class="editTech" data-target="#editTechnologiesModal" href="#"><span class="glyphicon glyphicon-align-justify" aria-hidden="true"></span></a></td>
        <td class="centered"><a data-toggle="modal" class="editActivity" data-target="#editActivityModal" href="#"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a></td>
        <td class="centered"><a href="#" class="delActivity" ><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a></td>
    </tr>
<% }); %>